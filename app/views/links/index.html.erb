<p id="notice"><%= notice %></p>

<h1>Links</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profile.links.each do |link| %>
      <tr>
        <td>
          <b><%= link.name %></b>
        </td>
      </tr>
      <tr>
        <td>
          <%= link_to link.url %>
        </td>
      </tr>
      <tr>
        <td><%= link_to 'Edit', edit_profile_link_path(@profile, link) %></td>
        <td><%= link_to 'Destroy', profile_link_path(@profile, link), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_profile_link_path(@profile) %> |
<%= link_to 'Back to Edit Profile', edit_profile_path(@profile) %>
